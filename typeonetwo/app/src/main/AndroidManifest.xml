<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appspot.typeonetwo.activities"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application android:label="@string/app_name" android:icon="@drawable/ic_launcher">
        <activity android:name="MainActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.Light">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="DataEntryChooserActivity"
            android:label="@string/data_entry_chooser"
            android:theme="@android:style/Theme.Holo.Light"
            android:parentActivityName="com.appspot.typeonetwo.activities.MainActivity">
        </activity>
        <activity android:name="InsulinEntryActivity"
            android:label="@string/insulin_entry"
            android:theme="@android:style/Theme.Holo.Light"
            android:parentActivityName="com.appspot.typeonetwo.activities.DataEntryChooserActivity">
        </activity>
        <activity android:name="GlucoseEntryActivity"
            android:label="@string/glucose_entry"
            android:theme="@android:style/Theme.Holo.Light"
            android:parentActivityName="com.appspot.typeonetwo.activities.DataEntryChooserActivity">
        </activity>

    </application>
</manifest>